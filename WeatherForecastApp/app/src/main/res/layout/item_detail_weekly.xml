<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="11"
    android:layout_margin="16dp"
    android:gravity="center"
    android:padding="10dp"
    android:background="@drawable/card_item_detail_hourly">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="5"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_day_of_week1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hôm nay"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_day_of_week2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5-11-2022"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_icon_day_of_week"
        android:layout_marginRight="20dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:src="@mipmap/_01d"/>

    <TextView
        android:id="@+id/tv_temp_max_day"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:text="30°C"
        android:textSize="20sp"
        android:paddingLeft="20dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_temp_min_day"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2"
        android:text="23°C"
        android:textSize="20sp"
        android:paddingLeft="8dp"
        android:textColor="@color/white"/>

</LinearLayout>